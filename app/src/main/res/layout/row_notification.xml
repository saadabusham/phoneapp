<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.raantech.awfrlak.data.models.notification.Notification" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingStart="@dimen/layouts_margin_start"
        android:paddingEnd="@dimen/layouts_margin_end">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/button_color"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="0dp" />

        <com.raantech.awfrlak.ui.base.views.AppTextView
            android:id="@+id/tvName"
            style="@style/textview_normal_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/text_gray_color"
            android:textSize="@dimen/_13ssp"
            tools:text="Your order on the way" />

    </LinearLayout>
</layout>